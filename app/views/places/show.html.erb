<h1><%= @place.name %></h1>

<h3>Posts</h3>

<ul>
  <% for post in @posts %>
<h2><%= post.title %></h2>
<% if post.posted_on.present? %>
  <p><%= @post.created_at %></p>
<% else %>
  <p><small>No posted date available</small></p>
<% end %>
      <p><%= post.description %></p>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>